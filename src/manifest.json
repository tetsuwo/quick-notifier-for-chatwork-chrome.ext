{
  "name": "__MSG_ext_name__",
  "description": "__MSG_ext_description__",
  "default_locale": "en",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "images/chatwork-logo_grayscale.png",
      "38": "images/chatwork-logo_grayscale.png"
    }
  },
  "icons": {
    "16": "images/chatwork-logo_colorful.png",
    "48": "images/chatwork-logo_colorful.png",
    "64": "images/chatwork-logo_colorful.png",
    "128": "images/chatwork-logo_colorful.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "https://api.chatwork.com/*"
  ],
  "web_accessible_resources": [
    "callback.html"
  ],
  "version": "0.2.0",
  "manifest_version": 2,
  "content_security_policy": 
    "script-src 'self' https://ssl.google-analytics.com https://platform.twitter.com https://apis.google.com; frame-src https://plusone.google.com https://www.facebook.com https://platform.twitter.com https://apis.google.com https://accounts.google.com; object-src 'self'"
}
